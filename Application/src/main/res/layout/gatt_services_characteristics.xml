            android:text="TRM Error :"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/mSensorData"
            app:layout_constraintEnd_toStartOf="@+id/mSensorData"
            app:layout_constraintStart_toEndOf="@+id/motorStopView"
            app:layout_constraintTop_toTopOf="@+id/mSensorData"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
