            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/mTransmitterError"
            app:layout_constraintEnd_toStartOf="@+id/mTransmitterError"
            app:layout_constraintStart_toEndOf="@+id/motorStopView"
            app:layout_constraintTop_toTopOf="@+id/mTransmitterError"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/mTransmitterError"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="11dp"
            android:text="@string/no_data"
            android:textColor="#FF0000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/mSensorData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mSensorData"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="144dp"
            android:text="@string/no_data"
            android:textColor="#F50000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
